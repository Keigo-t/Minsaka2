          <!--</button>-->

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

            <% if user_signed_in? %>
              <p>ようこそ、<%= current_customer.name %>さん！</p>
              <li class="nav-item">
                <button type="button" class="btn btn-light mr-5">
                  <%= link_to 'Profile', post_path(current_user.id) %>
                </button>
              </li>
              <li class="nav-item">
                <button type="button" class="btn btn-light mr-5">
                  <%= link_to 'Team Mates', root_path %>
