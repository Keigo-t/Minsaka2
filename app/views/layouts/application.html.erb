              <li class="nav-item">
                <button type="button" class="btn btn-light mr-5">
                  <%= link_to 'Log in', new_user_session_path %>
                </button>
              </li>
              <li class="nav-item">
                <button type="button" class="btn btn-light mr-5">
                  <%= link_to 'Sign Up', new_user_registration_path %>
