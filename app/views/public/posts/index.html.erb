<body class="public-body">
  <%= flash[:notice] %><br>
  <%= link_to '新規投稿', new_post_path %>

  <table class="table">
    <thead>
      <tr>
        <th>名前</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <%= link_to user_path(post.user) do %>
              <%= post.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to post_path(post.id) do %>
              <%= post.post %>
            <% end %>
          </td>
          <td>
            <% if post.user == current_user %>
            <%= link_to "削除", post_path(post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</body>


