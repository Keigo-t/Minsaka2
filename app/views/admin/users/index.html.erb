<h3>会員一覧</h3>

<table>
  <thead>
    <tr>
      <th>会員ステータス</th>
      <th>会員ID</th>
      <th>名前</th>
      <th>Eメール</th>
      <th>投稿数</th>
      <th>コメント数</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.is_deleted %></td>
      <td><%= user.id %></td>
      <td>
        <%= link_to admin_user_path(user.id) do %>
        <%= user.name %>
        <% end %>
      </td>
      <td><%= user.email %></td>
      <td></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>