<h3>チーム一覧</h3>

<table>
  <thead>
    <tr>
      <th>League</th>
      <th>Team</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
    <tr>
      <td><%#= team.league.name %></td>
      <td><%= team.name %></td>
      <td><%= link_to "編集", edit_admin_team_path(team.id) %></td>
      <td>削除</td>
    </tr>
    <% end %>
  </tbody>
</table>
