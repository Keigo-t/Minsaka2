<h3>投稿一覧</h3>

<table class="tabel">
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>投稿</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to admin_user_path(post.user.id) do %>
            <%= post.user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to admin_post_path(post.id) do %>
            <%= post.post %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>